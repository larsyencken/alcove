{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Metadata config",
  "type": "object",
  "properties": {
    "version": {
      "type": "integer",
      "description": "Version of the shelf config file"
    },
    "uri": {
      "type": "string",
      "pattern": "^(snapshot|table)://[a-z0-9-_/]+$"
    },
    "checksum": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "snapshot_type": {
      "type": "string",
      "enum": ["file", "directory"]
    },
    "extension": {
      "type": "string",
      "pattern": "^\\.[a-z0-9]+$"
    },
    "name": {
      "type": "string"
    },
    "source_name": {
      "type": "string"
    },
    "source_url": {
      "type": "string",
      "pattern": "^https?://[a-z0-9-./]+$"
    },
    "date_accessed": {
      "type": "string",
      "pattern": "^2[0-9]{3}-[0-9]{2}-[0-9]{2}$"
    },
    "access_notes": {
      "type": "string"
    },
    "manifest": {
      "type": "object",
      "patternProperties": {
        "^[a-z-Z0-9-_]+$": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        }
      }
    }
  },
  "required": ["version", "uri", "checksum"],
  "$oneOf": [
    {
      "required": ["extension"]
    },
    {
      "required": ["manifest"]
    }
  ],
  "additionalProperties": false
}
